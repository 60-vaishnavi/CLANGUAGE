#include <stdio.h>

int main()
{
  int a, b, c, d,sum;
  printf("enter four elements");
  scanf("%d%d%d%d",&a, &b, &c, &d); 
  int big=a>b&&b>c&&c>d?a:(b>c&&c>d)?b:(c>d)?c:d;
  int small =a<b&&b<c&&c<d?a:(b<c&&c<d)?b:(c<d)?c:d;
  
  printf("big is %d\n",big);
  printf("small  is %d\n",small);
  sum=small+big;
  printf("sum of small and big is %d",sum); 

    return 0;
}
